<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockWatcher.Pages.Watchers"
             Title="Watchers"
             x:Name="this">
    <VerticalStackLayout>
      <CollectionView x:Name="WatchersCollectionView"
                      ItemsSource="{Binding WatchersList}">
      </CollectionView>
    </VerticalStackLayout>

  <ContentPage.ToolbarItems>
    <ToolbarItem IconImageSource="plus.png" Clicked="AddWatcherClicked" />
  </ContentPage.ToolbarItems>
</ContentPage>