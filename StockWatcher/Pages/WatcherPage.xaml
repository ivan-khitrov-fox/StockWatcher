<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockWatcher.Pages.WatcherPage"
             x:Name="this">
  <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="12">
      <Entry x:Name="NameEntry"
             Placeholder="Watcher name"
             ReturnType="Done" />

      <Picker x:Name="TypePicker"
              Title="Watcher Type"
              SelectedIndexChanged="TypeChanged" />

      <Picker x:Name="DirectionPicker"
              Title="Watcher Direction" />

      <Button x:Name="SecIdButton"
              Clicked="SecIdButtonClicked"
              Text="Select Stock Item" />

      <!-- Deal watcher fields -->
      <VerticalStackLayout x:Name="DealSection" IsVisible="False" Spacing="10">
        <Label Text="Deal watcher" FontAttributes="Bold" />
        <Entry x:Name="DealPriceEntry" Keyboard="Numeric" Placeholder="Deal price" />
        <Entry x:Name="DealCountEntry" Keyboard="Numeric" Placeholder="Deal count" />
      </VerticalStackLayout>

      <!-- Limit watcher fields -->
      <VerticalStackLayout x:Name="LimitSection" IsVisible="False" Spacing="10">
        <Label Text="Limit watcher" FontAttributes="Bold" />

        <Label Text="Absolute levels (optional)" FontSize="12" Opacity="0.7" />
        <Entry x:Name="WarningLevelEntry" Keyboard="Numeric" Placeholder="Warning level (price)" />
        <Entry x:Name="AlarmLevelEntry" Keyboard="Numeric" Placeholder="Alarm level (price)" />

        <Label Text="Percent mode (optional)" FontSize="12" Opacity="0.7" />
        <Entry x:Name="StartPriceEntry" Keyboard="Numeric" Placeholder="Start price" />
        <Entry x:Name="WarningPctEntry" Keyboard="Numeric" Placeholder="Warning % (from start)" />
        <Entry x:Name="AlarmPctEntry" Keyboard="Numeric" Placeholder="Alarm % (from start)" />
      </VerticalStackLayout>
    </VerticalStackLayout>
  </ScrollView>

  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Save" Clicked="SaveClicked" />
    <ToolbarItem Text="Cancel" Clicked="CancelClicked" />
  </ContentPage.ToolbarItems>
</ContentPage>